<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="mode">
        <item name="android:src">@drawable/ic_round_light_mode</item>
    </style>

    <style name="rvSeperator">
        <item name="android:background">#141414</item>
    </style>

    <style name="pokemonDetailTv">
        <item name="android:textSize">16sp</item>
    </style>
</resources>